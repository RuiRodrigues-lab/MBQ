@model MVC_MBQ.Models.EntregaFamilia

@{
    ViewData["Title"] = "Apagar Entrega";
}

<ol class="breadcrumb">
    <li class="active">
        @if (ViewContext.RouteData.Values["controller"] != "Home" && ViewContext.RouteData.Values["action"] != "Index")
        {
            @Html.ActionLink("Home", "Index", "Home") @:>   @Html.ActionLink("PapiApp", "PapiApp", "Home") >  @Html.ActionLink(ViewContext.RouteData.Values["controller"].ToString(), "Index")
        }
        > @ViewBag.Title
    </li>
</ol>


<h1>Apagar</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Entrega a Familia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data de Entrega
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>
        <dt class="col-sm-2">
            Nome de Família
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Familia.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a Lista de Entregas</a>
    </form>
</div>
