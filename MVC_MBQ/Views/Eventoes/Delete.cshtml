@model MVC_MBQ.Models.Evento

@{
    ViewData["Title"] = "Apagar Evento";
}

<ol class="breadcrumb">
    <li class="active">
        @if (ViewContext.RouteData.Values["controller"] != "Home" && ViewContext.RouteData.Values["action"] != "Index")
        {
            @Html.ActionLink("Home", "Index", "Home") @:>  @Html.ActionLink("PapiApp", "PapiApp", "Home") >  @Html.ActionLink(ViewContext.RouteData.Values["controller"].ToString(), "Index")
        }
        > @ViewBag.Title
    </li>
</ol>


<h1>Apagar</h1>

<h3>Tens a certeza que queres apagar este evento?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome de Evento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeEvento)
        </dd>
        <dt class="col-sm-2">
            Telemóvel
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telemovel)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a Lista de Eventos</a>
    </form>
</div>
