@model IEnumerable<IdentityRole>

<h1 class="bg-info text-white">Todos os Roles</h1>
<a asp-action="Create" class="btn btn-secondary">Criar um Role</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Nome</th><th>Utilizador</th><th>Alterar</th><th>Apagar</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Alterar</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Apagar
                    </button>
                </form>
            </td>
        </tr>
    }
</table>