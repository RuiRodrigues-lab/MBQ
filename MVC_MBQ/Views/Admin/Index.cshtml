@model IEnumerable<AppUser>

<h1 class="bg-info text-white">Todos os utilizadores</h1>
<a asp-action="Create" class="btn btn-secondary">Criar utilizador</a>

<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Nome</th><th>Email</th><th>Alterar</th><th>Apagar</th></tr>
    @foreach (AppUser user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">
                    Alterar
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Apagar
                    </button>
                </form>
            </td>
        </tr>
    }
</table>