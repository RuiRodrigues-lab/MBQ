@model MVC_MBQ.Models.Inscricao

@{
    ViewData["Title"] = "Detalhes de Inscrição";
}

<ol class="breadcrumb">
    <li class="active">
        @if (ViewContext.RouteData.Values["controller"] != "Home" && ViewContext.RouteData.Values["action"] != "Index")
        {
            @Html.ActionLink("Home", "Index", "Home") @:>   @Html.ActionLink("PapiApp", "PapiApp", "Home")  >  @Html.ActionLink(ViewContext.RouteData.Values["controller"].ToString(), "Index")
        }
        > @ViewBag.Title
    </li>
</ol>

<h1>Detalhes de Inscrição</h1>

<div>
    <h4>Inscrição</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data de Inscrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInscrição)
        </dd>
        <dt class="col-sm-2">
            Nome de Voluntário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voluntario.Nome)
        </dd>
        <dt class="col-sm-2">
            Nome de Evento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Evento.NomeEvento)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
    <a asp-action="Index">Voltar à Lista de Inscrições</a>
</div>
