@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity.Name!<i class="far fa-smile-wink"></i></a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-primary"><i class="fas fa-times"></i> Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-user-plus"></i> Registar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-key"></i> Iniciar Sessão</a>
    </li>
}
</ul>
