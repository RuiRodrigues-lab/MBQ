@model MVC_MBQ.Models.ProdutoEntregue

@{
    ViewData["Title"] = "Apagar Produto Entregue";
}


<ol class="breadcrumb">
    <li class="active">
        @if (ViewContext.RouteData.Values["controller"] != "Home" && ViewContext.RouteData.Values["action"] != "Index")
        {
            @Html.ActionLink("Home", "Index", "Home") @:> @Html.ActionLink("PapiApp", "PapiApp", "Home")  >  @Html.ActionLink(ViewContext.RouteData.Values["controller"].ToString(), "Index")
        }
        > @ViewBag.Title
    </li>
</ol>


<h1>Apagar</h1>

<h3>Tens a certeza que queres apagar o produto entregue?</h3>
<div>
    <h4>Produto Entregue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Quantidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-2">
            Nome de Produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.NomeProduto)
        </dd>
        <dt class="col-sm-2">
            Nome de Família
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EntregaFamilia.Familia.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |  
        <a asp-action="Index">Voltar a Lista de Produtos Entregues</a> |
        <a asp-controller="EntregaFamilias" asp-action="Index">Voltar à Lista de Entregas a Famílias</a>

    </form>
</div>
