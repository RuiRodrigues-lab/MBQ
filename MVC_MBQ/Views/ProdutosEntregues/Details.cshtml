@model MVC_MBQ.Models.ProdutoEntregue

@{
    ViewData["Title"] = "Detalhes de Produto Entregue";
}


<ol class="breadcrumb">
    <li class="active">
        @if (ViewContext.RouteData.Values["controller"] != "Home" && ViewContext.RouteData.Values["action"] != "Index")
        {
            @Html.ActionLink("Home", "Index", "Home") @:>   @Html.ActionLink("PapiApp", "PapiApp", "Home")  >  @Html.ActionLink(ViewContext.RouteData.Values["controller"].ToString(), "Index")
        }
        > @ViewBag.Title
    </li>
</ol>

<h1>Detalhes</h1>

<div>
    <h4>Produto Entregue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Quantidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-2">
            Nome Produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.NomeProduto)
        </dd>
        <dt class="col-sm-2">
            Nome Familia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EntregaFamilia.Familia.Nome)
        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |*@
    <a asp-action="Index">Voltar a Lista de Produtos Entregues</a> |
