@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Verficação de codigo de recuperação";
}

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    Pediste para iniciar sessão com um codigo de recuperação. Este meio não ira ser lembrado até ser providenciado 
    um codigo da aplicação de autenticação no iniciar sessão ou desligar o 2FA e iniciar sessão novamente.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RecoveryCode"></label>
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Iniciar Sessão</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
